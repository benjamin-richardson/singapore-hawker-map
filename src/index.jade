extends _layouts/base

block config
  - var baseUrl = '/'

include _modules/list/list
include _modules/hawker-centre/hawker-centre

block content

  | <script id="stall-list-template" type="text/template">
  li
    .id(data-id='')
      a.name(href='#')
      span &nbsp;#
        span.level
        span.shop
  | </script>

  | <script id="cuisine-list-template" type="text/template">
  li
    .id(data-id='')
      a.cuisine.js-cuisine(href='#')
  | </script>

  | <script id="dish-list-template" type="text/template">
  li
    .id(data-id='')
      a.dish(href='#')
  | </script>


  header
    h1 Amoy Street Hawker Centre


  .main-container
    section.overlay-panel

      h2 Filter

      #stall-list
        h3 Stalls
        ul.list


      #cuisine-list
        h3 Cuisine
        ul.list


      #dish-list
        h3 Dishes
        ul.list


    section.full-screen-container
      +hawker-centre({'__class': 'amoy-street-food-centre', 'attributes': {'data-hawker': 'asfc'}})
