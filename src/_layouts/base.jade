  <![endif]-->

  .page-container
    block content

  block scripts
    script(defer, src= baseUrl + 'scripts/vendor/snap.svg.js')
    script(defer, src= baseUrl + 'scripts/vendor/svg-pan-zoom.js')
    //- script(src= baseUrl + 'scripts/vendor/snap.svg.min.js')
    //- script(src= baseUrl + 'scripts/vendor/svg-pan-zoom.min.js')
    script(defer ,src= baseUrl + 'scripts/main.js')

</html>
